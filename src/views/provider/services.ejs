<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
</head>

<body class="provider-page">

    <div class="main-wrapper">

        <%- include('../partials/provider-header') %>


        <%- include('../partials/provider-sidebar') %>


        <div class="page-wrapper">
            <div class="content container-fluid">
                <div class="row">
                    <div class="d-flex justify-content-between align-items-center flex-wrap mb-4">
                        <h5>My Services</h5>
                        <div class="d-flex align-items-center">
                            <a href="javascript:void(0);" data-bs-toggle="modal" data-bs-target="#add-service" class="btn btn-dark d-flex align-items-center"><i
                                    class="ti ti-circle-plus me-2"></i>Add Services</a>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-xl-12 col-lg-12">
                        <div class="tab-content pt-0">
                            <div class="tab-pane active" id="active-service" role="tabpanel"
                                aria-labelledby="active-service">
                                <div class="row justify-content-center align-items-center services"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade custom-modal" id="add-service">
            <div class="modal-dialog modal-dialog-centered modal-xl">
                <div class="modal-content">
                    <div class="modal-header d-flex align-items-center justify-content-between border-bottom">
                        <h5 class="modal-title">Add A New Service</h5>
                        <a href="javascript:void(0);" data-bs-dismiss="modal" aria-label="Close"><i
                                class="ti ti-circle-x-filled fs-20"></i></a>
                    </div>
                    <form id="new-service-form">
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="mb-3">
                                                <label class="form-label">Service Category *</label>
                                                <select class="select form-control required service_category_id" name="service_category_id">
                                                    <option>Choose Category</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="mb-3">
                                                <label class="form-label">Service Title *</label>
                                                <input type="text" class="form-control required" name="service_title">
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="mb-3">
                                                <label class="form-label">Service Price *</label>
                                                <input type="text" class="form-control required" name="service_price">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="mb-3">
                                                <label class="form-label">Service Discount Rate (%)</label>
                                                <input type="text" class="form-control service_discount_rate" name="service_discount_rate">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="mb-3">
                                                <label class="form-label">Service Location (Y)</label>
                                                <input type="text" class="form-control" name="service_location_y">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="mb-3">
                                                <label class="form-label">Service Location (X)</label>
                                                <input type="text" class="form-control" name="service_location_x">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="mb-3">
                                                <label class="form-label">Youtube Video</label>
                                                <input type="text" class="form-control" name="service_youtube_video_url">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="mb-3">
                                                <label class="form-label">Service Description *</label>
                                                <textarea class="form-control required" name="service_description" rows="5"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="mb-3">
                                                <label class="form-label">Service Address *</label>
                                                <input type="text" class="form-control required" name="service_address">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="mb-3">
                                                <label class="form-label">Service Images *</label>
                                                <input type="file" class="form-control required" name="images" multiple>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <div class="modal-footer">
                        <button type="button" class="btn bg-gray" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-dark">Add Service</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="modal fade custom-modal" id="update-service">
            <div class="modal-dialog modal-dialog-centered modal-xl">
                <div class="modal-content">
                    <div class="modal-header d-flex align-items-center justify-content-between border-bottom">
                        <h5 class="modal-title"></h5>
                        <a href="javascript:void(0);" data-bs-dismiss="modal" aria-label="Close"><i
                                class="ti ti-circle-x-filled fs-20"></i></a>
                    </div>
                    <form id="update-service-form">
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="mb-3">
                                                <label class="form-label">Service Category *</label>
                                                <select class="select form-control required service_category_id"
                                                    name="service_category_id">
                                                    <option>Choose Category</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="mb-3">
                                                <label class="form-label">Service Title *</label>
                                                <input type="text" class="form-control required service_title" name="service_title">
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="mb-3">
                                                <label class="form-label">Service Price *</label>
                                                <input type="text" class="form-control required service_price" name="service_price">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="mb-3">
                                                <label class="form-label">Service Discount Rate (%)</label>
                                                <input type="text" class="form-control service_discount_rate"
                                                    name="service_discount_rate">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="mb-3">
                                                <label class="form-label">Service Location (Y)</label>
                                                <input type="text" class="form-control service_location_y" name="service_location_y">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="mb-3">
                                                <label class="form-label">Service Location (X)</label>
                                                <input type="text" class="form-control service_location_x" name="service_location_x">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="mb-3">
                                                <label class="form-label">Youtube Video</label>
                                                <input type="text" class="form-control service_youtube_video_url" name="service_youtube_video_url">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="mb-3">
                                                <label class="form-label">Service Description *</label>
                                                <textarea class="form-control required service_description" name="service_description"
                                                    rows="5"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="form-label">Service Address *</label>
                                                <input type="text" class="form-control required service_address" name="service_address">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="form-label">Service Status *</label>
                                                <select class="select form-control required service_status" name="service_status">
                                                    <option>Choose Status</option>
                                                    <option>Published</option>
                                                    <option>Unpublished</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="mb-3">
                                                <label class="form-label">Service Images</label>
                                                <input type="file" class="form-control" name="images" multiple>
                                            </div>
                                        </div>
                                    </div>
                                    <input type="hidden" class="required service_id" name="service_id"/>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn bg-gray" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-dark">Update Service</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>


    <%- include('../partials/scripts') %>
    <script src="/assets/js/pages/services.js"></script>
</body>

</html>