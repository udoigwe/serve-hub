<div class="modal fade" id="register-modal" tabindex="-1" data-bs-backdrop="static" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header d-flex align-items-center justify-content-end pb-0 border-0">
                <a href="javascript:void(0);" data-bs-dismiss="modal" aria-label="Close"><i
                        class="ti ti-circle-x-filled fs-20"></i></a>
            </div>
            <div class="modal-body p-4">
                <form class="register-form" action="#">
                    <div class="text-center mb-3">
                        <h3 class="mb-2">Registration</h3>
                        <p>Enter your credentials to access your account</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Full Name</label>
                        <input type="text" name="user_full_name" class="user_full_name form-control required">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" name="user_email" class="user_email form-control required">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Phone Number</label>
                        <input class="form-control user_phone required" name="user_phone" id="phone" type="text">
                    </div>
                    <div class="mb-3">
                        <div class="d-flex align-items-center justify-content-between flex-wrap">
                            <label class="form-label">Password</label>
                            <p class="text-gray-6 fw-medium  mb-1">Must be 8 Characters at Least</p>
                        </div>
                        <input type="password" name="user_password" class="form-control user_password required">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Confirm Password</label>
                        <input class="form-control required re_password" type="password">
                    </div>
                    <div class="mb-3">
                        <div class="d-flex align-items-center justify-content-between flex-wrap row-gap-2">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value id="remember_me">
                                <label class="form-check-label" for="remember_me">
                                    I agree to <a href="javascript:void(0);"
                                        class="text-primary text-decoration-underline">Terms of use</a> & <a
                                        href="javascript:void(0);"
                                        class="text-primary text-decoration-underline">Privacy policy</a>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Avatar</label>
                        <input class="form-control required user_avatar" name="user_avatar" type="file">
                    </div>
                    <input type="hidden" value="Customer" name="user_category" class=".category" />
                    <!-- <div class="mb-3">
                        <button type="button" data-bs-toggle="modal" data-bs-target="#login-modal"
                            class="btn btn-lg btn-linear-primary w-100">Sign Up</button>
                    </div> -->
                    <div class="mb-3">
                        <button type="submit" class="btn btn-lg btn-linear-primary w-100">Sign Up</button>
                    </div>
                    <div class=" d-flex justify-content-center">
                        <p>Already have a account? <a href="javascript:void(0);" class="text-primary"
                                data-bs-target="#login-modal" data-bs-toggle="modal">Sign In</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

